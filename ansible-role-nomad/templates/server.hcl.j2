server {
    enabled = true
    bootstrap_expect = 1
}

# Require TLS
tls {
  http = true
  rpc  = true

  ca_file   = "{{ nomad_config_dir }}/certificates/nomad-ca.pem"
  cert_file = "{{ nomad_config_dir }}/certificates/server.pem"
  key_file  = "{{ nomad_config_dir }}/certificates/server-key.pem"

  verify_server_hostname = true
  verify_https_client    = true
}
